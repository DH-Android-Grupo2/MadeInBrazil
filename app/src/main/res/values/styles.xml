<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menuIcons">
        <item name="itemIconTint">@drawable/icons_nav_bar_selector</item>
        <item name="itemTextColor">@drawable/icons_nav_bar_selector</item>
    </style>

    <style name="CardViewDefault" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="SearchTextInputDefault" >
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_baseline_search_20</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:hint">@string/string_search</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="CommentTextInputDefault" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColorHint">@color/colorAccentOpaque</item>
        <item name="android:hint">@string/string_search</item>
        <item name="boxBackgroundColor">@color/colorButtons</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="ArrowBackDefault">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewFilmsSeriesDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RatingDefault" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="ButtonWatched">
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ButtonFavoriteAndLists">
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>
</resources>