<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="menuIcons">
        <item name="itemIconTint">@drawable/icons_nav_bar_selector</item>
        <item name="itemTextColor">@drawable/icons_nav_bar_selector</item>
    </style>

    <style name="CardViewDefault" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="ChipDefault" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="toggle_borderColor">@color/colorAccent</item>
        <item name="toggle_borderWidth">1dp</item>
        <item name="toggle_btnCornerRadius">15dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="toggle_backgroundColor">@color/colorPrimary</item>
        <item name="toggle_selectedBackgroundColor">@color/colorAccent</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="toggle_textColor">@color/colorAccent</item>
        <item name="toggle_selectedTextColor">@color/white</item>
    </style>

    <style name="FormTextInput">
        <item name="android:layout_margin">30dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxBackgroundColor">@color/ocean_blue</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="FormTextEdit">
        <item name="android:textColor">@color/white_76</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/ic_baseline_keyboard_arrow_left_24</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="pageTitle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="searchField">
        <item name="android:layout_margin">20dp</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="startIconDrawable">@drawable/ic_baseline_search_20</item>
        <item name="startIconTint">@color/colorAccent</item>

    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:icon">@drawable/ic_baseline_search_20</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="SearchTextInputDefault" >
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_baseline_search_20</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:hint">@string/string_search</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="CommentTextInputDefault" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColorHint">@color/colorAccentOpaque</item>
        <item name="android:hint">@string/string_search</item>
        <item name="boxBackgroundColor">@color/colorButtons</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="ArrowBackDefault">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewFilmsSeriesDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RatingDefault" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/abc_ratingbar_small_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_ratingbar_small_material</item>

        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="ButtonWatchedActivity">
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ButtonWebsiteActivity">
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="ButtonFavoriteAndLists">
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
    </style>

    <style name="TabTextDefault" >
        <item name="tabTextColor">@drawable/tab_layout_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonWatchedFragment" >
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ButtonSocialFragment" >
        <item name="android:background">@drawable/buttons_shape</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

</resources>
