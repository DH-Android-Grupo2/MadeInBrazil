<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menuIcons">
        <item name="itemIconTint">@drawable/icons_nav_bar_selector</item>
        <item name="itemTextColor">@drawable/icons_nav_bar_selector</item>
    </style>

    <style name="CardViewDefault" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="SearchTextInputDefault" >
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_baseline_search_20</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:hint">@string/string_search</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="endIconTint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>
</resources>