<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchievementActivity">


    <ImageButton
        android:id="@+id/imBackButton"
        style="@style/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPagetitle"
        style="@style/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/achievement_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imBackButton" />


    <ImageView
        android:id="@+id/imMovie"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gray"
        android:background="@drawable/ic_baseline_theaters_24"
        app:layout_constraintBottom_toTopOf="@+id/imSerie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPagetitle" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/light_green"
        app:layout_constraintStart_toEndOf="@id/imMovie"
        app:layout_constraintTop_toTopOf="@id/imMovie"
        app:layout_constraintBottom_toBottomOf="@id/imMovie"
        app:layout_constraintEnd_toEndOf="parent"
        android:progressDrawable="@drawable/progressbar"
        />

    <ImageView
        android:id="@+id/imSerie"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gray"
        android:background="@drawable/ic_baseline_video_library_24"
        app:layout_constraintBottom_toTopOf="@+id/imFavorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imMovie" />

    <ImageView
        android:id="@+id/imFavorite"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/gray"
        android:background="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imSerie" />
</androidx.constraintlayout.widget.ConstraintLayout>
