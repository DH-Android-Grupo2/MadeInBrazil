<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.vipulasri.ticketview.TicketView
        android:id="@+id/ticketViewYoutube"
        app:ticketBackgroundColor="@color/colorPrimary"
        app:ticketBorderColor="@color/colorAccent"
        app:ticketCornerType="scallop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:ticketOrientation="horizontal"
        app:ticketScallopRadius="0dp"
        app:ticketShowBorder="true"
        app:ticketElevation="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:enableAutomaticInitialization="false"
        app:layout_constraintStart_toStartOf="@id/ticketViewYoutube"
        app:layout_constraintEnd_toEndOf="@id/ticketViewYoutube"
        app:layout_constraintTop_toTopOf="@id/ticketViewYoutube"
        app:layout_constraintBottom_toBottomOf="@id/ticketViewYoutube"/>

</androidx.constraintlayout.widget.ConstraintLayout>