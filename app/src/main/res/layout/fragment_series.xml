<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.FilmsFragment"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/ivArrowBackSeries"
            style="@style/ArrowBackDefault"
            android:src="@drawable/ic_baseline_arrow_back_ios_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivProfileSeries"
            />

        <ImageView
            android:id="@+id/ivProfileSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_person_20"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/ivArrowBackSeries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tilSearchSeries"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearchSeries"
            style="@style/SearchTextInputDefault"
            app:layout_constraintStart_toStartOf="@id/ivArrowBackSeries"
            app:layout_constraintEnd_toEndOf="@id/ivProfileSeries"
            app:layout_constraintBottom_toTopOf="@id/rvCardsListSeries"
            app:layout_constraintTop_toBottomOf="@id/ivArrowBackSeries">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietSearchSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardsListSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/main_cards"
            tools:itemCount="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilSearchSeries"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>