<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewSeason"
        style="@style/CardViewDefault"
        android:layout_width="150sp"
        android:layout_height="120sp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cvImageSeason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/auto_da_compadecida_capa" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvSeasonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Temporada 1"
        android:layout_margin="10dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/cardViewSeason"
        app:layout_constraintEnd_toEndOf="@id/cardViewSeason"
        app:layout_constraintTop_toBottomOf="@id/cardViewSeason"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvSeasonOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Uma investigação sobre suspeitas de corrupção envolvendo estatais e empreiteiras se torna um dos maiores escândalos políticos do Brasil. Inspirada em fatos reais."
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:lines="5"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/cardViewSeason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardViewSeason"
        app:layout_constraintBottom_toBottomOf="@id/cardViewSeason"/>

</androidx.constraintlayout.widget.ConstraintLayout>