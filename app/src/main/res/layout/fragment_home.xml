<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.HomeFragment">

        <ImageView
            android:id="@+id/logoMadeInBrasil"
            android:layout_width="match_parent"
            android:layout_height="85sp"
            android:src="@drawable/made_in_brasil_logo"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/tvLancamentosRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lançamentos"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoMadeInBrasil"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardsListLancamentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/user_favorites_recyclerview"
            tools:itemCount="1"
            tools:orientation="horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLancamentosRecycler"/>

        <TextView
            android:id="@+id/tvSugestoesRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Filmes para Você"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvCardsListLancamentos"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardsListFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/user_favorites_recyclerview"
            tools:itemCount="1"
            tools:orientation="horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSugestoesRecycler"/>

        <TextView
            android:id="@+id/tvCardList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Séries para Você"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvCardsListFavorites"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardListSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/user_favorites_recyclerview"
            tools:itemCount="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tvFavoritesRecycler"
            app:layout_constraintTop_toBottomOf="@id/tvCardList"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>