<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/ivArrowBackLists"
            style="@style/ArrowBackDefault"
            android:src="@drawable/ic_baseline_arrow_back_ios_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivProfileLists"
            />

        <ImageView
            android:id="@+id/ivProfileLists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_person_20"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tilSearchLists"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearchLists"
            style="@style/SearchTextInputDefault"
            app:layout_constraintStart_toStartOf="@id/ivArrowBackLists"
            app:layout_constraintEnd_toEndOf="@id/ivProfileLists"
            app:layout_constraintBottom_toTopOf="@id/rvListas"
            app:layout_constraintTop_toBottomOf="@id/ivArrowBackLists">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tietSearchFilms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tilSearchLists"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/rvprojeto_listitem"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>