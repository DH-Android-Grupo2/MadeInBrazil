<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileComment"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/auto_da_compadecida_capa"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvProfileName"/>

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Pedro Chaves"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/ivProfileComment"
        app:layout_constraintStart_toStartOf="@id/ivProfileComment"
        app:layout_constraintEnd_toEndOf="@id/ivProfileComment"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorAccent"
        tools:text="Ótimo filme, elenco fantástico e um show de atuação de todos. História super envolvente, um dos melhores que já vi!!"
        app:layout_constraintStart_toEndOf="@id/ivProfileComment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>