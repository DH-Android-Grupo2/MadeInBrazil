<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCovers"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvListName">

            <LinearLayout
                android:id="@+id/containerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Filmes do Babu"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@id/cvCovers"
        app:layout_constraintTop_toTopOf="@id/cvCovers"
        app:layout_constraintBottom_toBottomOf="@id/cvCovers"/>

    <ImageView
        android:id="@+id/ivDeleteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_delete_20"
        app:layout_constraintTop_toTopOf="@id/cvCovers"
        app:layout_constraintBottom_toBottomOf="@id/cvCovers"
        app:layout_constraintEnd_toStartOf="@id/ivCreateIcon"/>

    <ImageView
        android:id="@+id/ivCreateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_create_20"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/cvCovers"
        app:layout_constraintBottom_toBottomOf="@id/cvCovers"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>