<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCovers"
        android:layout_width="114dp"
        android:layout_height="66dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:strokeColor="@color/white"
        app:strokeWidth="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvListName">

            <LinearLayout
                android:id="@+id/containerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ocean_blue"
                android:gravity="center"
                android:orientation="horizontal"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:gravity="start"
        tools:text="Filmes do Babu"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="24sp"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/ivDeleteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_delete_24_black"
        android:contentDescription="@string/delete_icon_description" />

    <ImageView
        android:id="@+id/ivEditcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24_black"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:contentDescription="@string/edit_icon_description" />

</LinearLayout>