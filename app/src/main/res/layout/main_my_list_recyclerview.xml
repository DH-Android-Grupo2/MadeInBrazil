<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivFirstImageList"
        android:layout_width="28dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        tools:src = "@drawable/auto_da_compadecida_capa"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivSecondImageList"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ivSecondImageList"
        android:layout_width="28dp"
        android:layout_height="56dp"
        tools:src = "@drawable/auto_da_compadecida_capa"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/ivFirstImageList"
        app:layout_constraintTop_toTopOf="@id/ivFirstImageList"
        app:layout_constraintEnd_toStartOf="@id/ivThirdImageList"/>

    <ImageView
        android:id="@+id/ivThirdImageList"
        android:layout_width="28dp"
        android:layout_height="56dp"
        tools:src = "@drawable/auto_da_compadecida_capa"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/ivSecondImageList"
        app:layout_constraintEnd_toStartOf="@id/ivFourthImageList"
        app:layout_constraintTop_toTopOf="@id/ivFirstImageList"/>

    <ImageView
        android:id="@+id/ivFourthImageList"
        android:layout_width="28dp"
        android:layout_height="56dp"
        tools:src = "@drawable/auto_da_compadecida_capa"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/ivThirdImageList"
        app:layout_constraintTop_toTopOf="@id/ivFirstImageList"/>

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Filmes do Babu"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@id/ivFourthImageList"
        app:layout_constraintTop_toTopOf="@id/ivFirstImageList"
        app:layout_constraintBottom_toBottomOf="@id/ivFirstImageList"/>

    <ImageView
        android:id="@+id/ivDeleteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_delete_20"
        app:layout_constraintTop_toTopOf="@id/ivFirstImageList"
        app:layout_constraintBottom_toBottomOf="@id/ivFirstImageList"
        app:layout_constraintEnd_toStartOf="@id/ivCreateIcon"/>

    <ImageView
        android:id="@+id/ivCreateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_create_20"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/ivFirstImageList"
        app:layout_constraintBottom_toBottomOf="@id/ivFirstImageList"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>