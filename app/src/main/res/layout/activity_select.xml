        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_thriller"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_mistery"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_suspense"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="#569AC4"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_tvmovies"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btContinueGender"
        style="@style/ButtonWatchedFragment"
        android:layout_margin="0dp"
        app:layout_constraintEnd_toEndOf="@+id/tvSelectGender"
        app:layout_constraintStart_toStartOf="@+id/tvSelectGender"
        app:layout_constraintTop_toBottomOf="@+id/chipGroupGender"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/string_continue_gender" />


</androidx.constraintlayout.widget.ConstraintLayout>