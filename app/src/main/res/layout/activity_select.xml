<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="@color/colorPrimary"
    tools:context=".view.activity.SelectActivity">

    <TextView
        android:id="@+id/tvSelectGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_select_gender"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:chipSpacingVertical="5dp"
        app:chipSpacingHorizontal="5dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/tvSelectGender"
        app:layout_constraintEnd_toEndOf="@+id/tvSelectGender"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectGender">


        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_drama"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="20dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:checked="true"
            android:layout_marginTop="60dp"
            app:chipBackgroundColor="@color/colorPrimaryOpaque"
            app:chipCornerRadius="20dp"
            app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_action"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="20dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:checked="true"
            android:layout_marginTop="60dp"
            app:chipBackgroundColor="@color/colorPrimaryOpaque"
            app:chipCornerRadius="20dp"
            app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_horror"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_family"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_animation"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_doc"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="#FFC800"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_comedy"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_crime"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_fantasy"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_mistery"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="#569AC4"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_war"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:checked="true"
        android:layout_marginTop="60dp"
        app:chipBackgroundColor="@color/colorPrimaryOpaque"
        app:chipCornerRadius="20dp"
        app:chipStrokeColor="@color/colorAccent"/>
        <com.google.android.material.chip.Chip
        android:id="@+id/chip12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_syfi"
        android:textColor="@color/colorAccent"
