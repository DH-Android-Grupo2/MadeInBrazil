<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".view.activity.SelectActivity">

    <TextView
        android:id="@+id/tvSelectGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/string_select_gender"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        app:chipSpacingVertical="10dp"
        app:chipSpacingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="@+id/tvSelectGender"
        app:layout_constraintEnd_toEndOf="@+id/tvSelectGender"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectGender">


        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/ChipDefault"
            android:text="@string/string_drama"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/ChipDefault"
            android:text="@string/string_action"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/ChipDefault"
            android:text="@string/string_horror"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/ChipDefault"
            android:text="@string/string_family"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            style="@style/ChipDefault"
            android:text="@string/string_animation"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            style="@style/ChipDefault"
            android:text="@string/string_doc"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip7"
            style="@style/ChipDefault"
            android:text="@string/string_comedy"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip8"
            style="@style/ChipDefault"
            android:text="@string/string_crime"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip9"
            style="@style/ChipDefault"
            android:text="@string/string_fantasy"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip10"
            style="@style/ChipDefault"
            android:text="@string/string_mistery"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip11"
            style="@style/ChipDefault"
            android:text="@string/string_war"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip12"
            style="@style/ChipDefault"
            android:text="@string/string_syfi"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip13"
            style="@style/ChipDefault"
            android:text="@string/string_thriller"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip14"
            style="@style/ChipDefault"
            android:text="@string/string_mistery"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip15"
            style="@style/ChipDefault"
            android:text="@string/string_suspense"
            android:checked="false"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip16"
            style="@style/ChipDefault"
            android:text="@string/string_tvmovies"
            android:checked="false"
            />
    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btContinueGender"
        style="@style/ButtonWatchedFragment"
        android:layout_margin="0dp"
        app:layout_constraintEnd_toEndOf="@+id/tvSelectGender"
        app:layout_constraintStart_toStartOf="@+id/tvSelectGender"
        app:layout_constraintTop_toBottomOf="@+id/chipGroupGender"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/string_continue_gender" />

</androidx.constraintlayout.widget.ConstraintLayout>