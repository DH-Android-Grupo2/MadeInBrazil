<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewFavoritesProfile"
        style="@style/CardViewDefault"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cvImageFavoritesProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/auto_da_compadecida_capa" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvNameFavoritesProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="O Auto da Compadecida"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/cardViewFavoritesProfile"
        app:layout_constraintEnd_toEndOf="@id/cardViewFavoritesProfile"
        app:layout_constraintTop_toBottomOf="@id/cardViewFavoritesProfile"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>