<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.activity.InitialActivity">

    <ImageView
        android:id="@+id/ivLogoInitial"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_made_in_brasil_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btLoginInitial"
        android:layout_margin="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btLoginInitial"
        style="@style/ButtonWatchedFragment"
        android:layout_marginTop="20dp"
        android:text="@string/string_logIn"
        app:layout_constraintEnd_toEndOf="@+id/ivLogoInitial"
        app:layout_constraintStart_toStartOf="@+id/ivLogoInitial"
        app:layout_constraintTop_toBottomOf="@id/ivLogoInitial"
       />

    <Button
        android:id="@+id/btRegisterInitial"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:text="@string/string_button_register"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/ivLogoInitial"
        app:layout_constraintEnd_toEndOf="@id/ivLogoInitial"
        app:layout_constraintTop_toBottomOf="@id/btLoginInitial"
        />

