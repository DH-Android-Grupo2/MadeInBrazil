<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.activity.InitialActivity">

    <ImageView
        android:id="@+id/ivLogoInitial"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_made_in_brasil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btLoginInitial"
        android:layout_margin="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btLoginInitial"
        style="@style/ButtonWatchedFragment"
        android:text="@string/string_logIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btRegisterInitial" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btRegisterInitial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btLoginInitial"
        app:layout_constraintEnd_toEndOf="@id/ivLogoInitial"
        app:layout_constraintStart_toStartOf="@id/btLoginInitial"
        android:text="@string/string_button_register"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>