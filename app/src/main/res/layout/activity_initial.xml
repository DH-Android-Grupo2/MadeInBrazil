<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.activity.InitialActivity">

    <ImageView
        android:id="@+id/ivLogoInitial"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_made_in_brasil_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btLoginInitial"
        android:layout_margin="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btLoginInitial"
        style="@style/ButtonWatchedFragment"
        android:text="@string/string_logIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btGoogleInitial" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btGoogleInitial"
        style="@style/ButtonSocialFragment"
        android:drawableStart="@drawable/google"
        android:height="50sp"
        android:width="50sp"
        android:padding="10sp"
        app:layout_constraintEnd_toStartOf="@id/btFaceInitial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btLoginInitial" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btFaceInitial"
        style="@style/ButtonSocialFragment"
        android:drawableStart="@drawable/facebook"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btGoogleInitial"
        app:layout_constraintTop_toBottomOf="@id/btLoginInitial" />

</androidx.constraintlayout.widget.ConstraintLayout>