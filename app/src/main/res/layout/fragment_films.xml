<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.FilmsFragment">

        <ImageView
            android:id="@+id/ivArrowBackFilms"
            style="@style/ArrowBackDefault"
            android:src="@drawable/ic_baseline_arrow_back_ios_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivProfileFilms"
            />

        <ImageView
            android:id="@+id/ivProfileFilms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_person_20"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/tilSearchFilms"
            style="@style/AppSearchView"
            android:layout_width="wrap_content"
            android:icon="@drawable/ic_baseline_search_20"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toStartOf="@id/ivProfileFilms"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCardsListFilms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/main_cards"
            tools:itemCount="5"
            app:layout_constraintStart_toStartOf="@id/ivArrowBackFilms"
            app:layout_constraintEnd_toEndOf="@id/ivProfileFilms"
            app:layout_constraintTop_toBottomOf="@id/tilSearchFilms"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>